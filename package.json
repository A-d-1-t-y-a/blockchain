{
  "name": "ravitejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test test/unit/AccessControl.test.ts test/unit/FROSTVerifier.test.ts test/unit/ThresholdManager.test.ts test/unit/FROSTCoordinator.test.ts test/integration/EndToEnd.test.ts test/security/Reentrancy.test.ts test/security/BFT.test.ts",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "verify": "hardhat verify --network sepolia",
    "lint": "solhint 'contracts/**/*.sol'",
    "clean": "hardhat clean",
    "api:start": "cd api && pnpm start",
    "api:dev": "cd api && pnpm dev",
    "test:api": "mocha test/api/api-tests.ts --require ts-node/register --timeout 20000",
    "test:websocket": "mocha test/api/websocket-tests.ts --require ts-node/register --timeout 20000",
    "test:integration": "mocha test/integration/api-integration.test.ts --require ts-node/register --timeout 20000",
    "test:security": "mocha test/security/security-tests.ts --require ts-node/register --timeout 20000",
    "test:error": "mocha test/error-handling/error-tests.ts --require ts-node/register --timeout 20000",
    "test:edge": "mocha test/edge-cases/edge-tests.ts --require ts-node/register --timeout 20000",
    "test:performance": "mocha test/performance/performance-tests.ts --require ts-node/register --timeout 20000",
    "test:api-suite": "npm run test:api && npm run test:websocket && npm run test:integration && npm run test:security && npm run test:error && npm run test:edge && npm run test:performance",
    "test:all-api": "kill-port 3000 && concurrently -k -s first \"pnpm api:start\" \"wait-on http://localhost:3000/health && npm run test:api-suite\"",
    "test:all": "npm run test && npm run test:all-api",
    "benchmark": "bash scripts/run-benchmarks.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/ignition-core": "^0.15.14",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "chai": "^4.3.10",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.27.0",
    "hardhat-gas-reporter": "^2.3.0",
    "kill-port": "^2.0.1",
    "mocha": "^11.7.5",
    "socket.io-client": "^4.8.1",
    "solidity-coverage": "^0.8.16",
    "start-server-and-test": "^2.1.3",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.927.0",
